@model IDIMAdmin.Models.User.UserApplicationAssignVm
@{
    ViewBag.Title = "User Application Assign";
}

<div class='col-xs-12'>
    <div class="page-title">
        <div class="pull-left">
            <h1 class="title">User Applicatioin</h1>
        </div>

        <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index","Dashboard")"><i class="fa fa-home"></i>Dashboard</a>
                </li>
                <li>
                    <a href="@Url.Action("List","User")">
                        <i class="fa fa-list" aria-hidden="true"></i>
                        User
                    </a>
                </li>
                <li class="active">
                    <strong>Application Assign</strong>
                </li>
            </ol>
        </div>

    </div>
</div>
<div class="clearfix"></div>

<div class="col-lg-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title pull-left">Assign</h2>
            <div class="actions panel_actions pull-right">
                <a href="@Url.Action("Assign","UserMenu", new{ id = Model.UserId })" class="btn btn-info">
                    <i class="fa fa-bars" aria-hidden="true"></i> Menu
                </a>
                <a href="@Url.Action("Assign","UserDevice")" class="btn btn-info">
                    <i class="fa fa-desktop"></i> Device
                </a>
                <a href="@Url.Action("Create","User")" class="btn btn-success">
                    <i class="fa fa-plus"></i> Create New
                </a>
                <a href="@Url.Action("Detail","User", new { id=Model.UserId})" class="btn btn-info">
                    <i class="fa fa-info"></i> Detail
                </a>
                <a href="@Url.Action("Edit", "User", new {id = Model.UserId})" class="btn btn-primary">
                    <i class="fa fa-edit"></i> Edit
                </a>
                <a href="@Url.Action("Delete","User", new{ id = Model.UserId })" class="btn btn-danger">
                    <i class="fa fa-remove" aria-hidden="true"></i> Delete
                </a>
                <a href="@Url.Action("List", "User")" class="btn btn-default">
                    <i class="fa fa-list"></i> List
                </a>
                <a class="box_toggle fa fa-chevron-down"></a>
            </div>
        </header>
        <div class="content-body">
            <div class="row">
                <div class="col-xs-12">

                    @using (Html.BeginForm("Assign", "UserApplication", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.UserId)
                        @Html.HiddenFor(model => model.RegimentNo)
                        @Html.HiddenFor(model => model.Username)

                        <div class="form-group">
                            @Html.LabelFor(m => m.RegimentNo, new { @class = "col-md-2 form-label" })
                            <div class="col-md-10">
                                @Html.DisplayFor(m => m.RegimentNo, new { @disabled = "disabled" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Username, new { @class = "col-md-2 form-label" })
                            <div class="col-md-10">
                                <a href="@Url.Action("Detail", "User", new {id = Model.UserId})">@Html.DisplayFor(m => m.Username)</a>
                            </div>
                        </div>

                        <table id="menu-list" class="table table-striped table-bordered menu-list" width="100%" cellspacing="0">
                            <thead>
                            <tr>
                                <th style="width: 35px">
                                    <input type="checkbox" class="form-control iCheck select-all">
                                </th>
                                <th>
                                    Name
                                </th>
                            </tr>
                            </thead>
                            <tbody>
                            @for (var i = 0; i < Model.Applications.Count(); i++)
                            {
                                @Html.HiddenFor(m => Model.Applications[i].Application.ApplicationId)

                                <tr>
                                    <td>@Html.CheckBoxFor(m => Model.Applications[i].IsAssigned, new { @class = "form-control iCheck item" })</td>
                                    <td>
                                        @Html.DisplayFor(m => Model.Applications[i].Application.ApplicationName)
                                        @Html.HiddenFor(m => Model.Applications[i].Application.ApplicationName)
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>                        
                        <script>
                            $(document).ready(function () {
                                var checkAll = $('.select-all');
                                var checkboxes = $('.item');

                                checkAll.on('ifChecked ifUnchecked', function(event) {        
                                    if (event.type == 'ifChecked') {
                                        checkboxes.iCheck('check');
                                    } else {
                                        checkboxes.iCheck('uncheck');
                                    }
                                });
                            });
                        </script>

                        <div class="pull-right">
                            <input type="submit" class="btn btn-success" value="Save" />
                            <input type="reset" class="btn" value="Clear" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</div>