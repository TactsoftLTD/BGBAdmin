@using IDIMAdmin.Extentions
@using IDIMAdmin.Models.User
@model UserSearchVm
@{
    ViewBag.Title = "User Application";
}

<div class='col-xs-12'>
    <div class="page-title">
        <div class="pull-left">
            <h1 class="title">User Application</h1>
        </div>
        <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index","Dashboard")"><i class="fa fa-home"></i>Dashboard</a>
                </li>
                <li class="active">
                    <strong>User Application</strong>
                </li>
            </ol>
        </div>
    </div>
</div>
<div class="clearfix"></div>

<div class="col-lg-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title pull-left">User</h2>
            <div class="actions pull-right">
                <a href="@Url.Action("List", "User")" c class="btn btn-info">
                    <i class="fa fa-info"></i> User
                </a>
                <a href="@Url.Action("List", "Application")" c class="btn btn-info">
                    <i class="fa fa-info"></i> Application
                </a>
                <a class="fa fa-chevron-down"></a>
            </div>
        </header>

        <div class="content-body">
            @using (Html.BeginForm("List", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-xs-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Username, new { @class = "col-md-4 form-label" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.Username, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Username)
                            </div>
                        </div>
                    </div>

                    <div class="col-xs-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.ArmyId, new { @class = "col-md-4 form-label" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.ArmyId, new { @class = "armyId" })
                                @Html.ValidationMessageFor(model => model.ArmyId)
                            </div>
                        </div>
                    </div>

                    <div class="col-xs-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.ApplicationId, new { @class = "col-md-4 form-label" })
                            <div class="col-md-8">
                                @Html.DropDownListFor(m => m.ApplicationId, Model.ApplicationDropdown, "Select Application", new { @class = "select2" })
                                @Html.ValidationMessageFor(model => model.ApplicationId)
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.DeviceId, new { @class = "col-md-4 form-label" })
                            <div class="col-md-8">
                                @Html.DropDownListFor(m => m.DeviceId, Model.DeviceDropdown, "Select Device", new { @class = "select2" })
                                @Html.ValidationMessageFor(model => model.DeviceId)
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Active, new { @class = "col-md-2 form-label" })
                            <div class="col-md-10">
                                @Html.RadioButtonFor(m => m.Active, Active.All, new { @class = "iCheck" }) @Active.All.ToString()
                                @Html.RadioButtonFor(m => m.Active, Active.Active, new { @class = "iCheck" }) @Active.Active.ToString()
                                @Html.RadioButtonFor(m => m.Active, Active.NotActive, new { @class = "iCheck" }) Not Active
                                @Html.ValidationMessageFor(model => model.Active)
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xs-12">
                    <div class="form-group">
                        <input type="submit" class="btn btn-success pull-right" value="Search" />
                    </div>
                </div>
            }

            <div class="row">
                <div class="col-xs-12">
                    <table id="DataGrid" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Username</th>
                                <th>Phone</th>
                                <th>Email</th>
                                <th>Personnel Code</th>
                                <th>Regiment</th>
                                <th>Active</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var v in Model.Users)
                            {
                                <tr>
                                    <td>@v.UserId</td>
                                    <td>@v.Username</td>
                                    <td>@v.Phone</td>
                                    <td>@v.Email</td>
                                    <td>@v.PersonnelCode</td>
                                    <td>@v.RegimentNo</td>
                                    <td>@v.IsActive.ToIcon()</td>
                                    <td>
                                        <a href="@Url.Action("Assign", "UserApplication", new {id = v.UserId})">
                                            <span class="label label-success"><i class="fa fa-plus"></i> User Application</span>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $(".armyId").val('').trigger('change');
            $('#DataGrid').DataTable({
                "aaSorting": [],
                "columns": [
                    { className: "id", searchable: false },
                    null,
                    null,
                    null,
                    null,
                    null,
                    null,
                    { width: "105px", "orderable": false }
                ]
            });
        });
    </script>
}

