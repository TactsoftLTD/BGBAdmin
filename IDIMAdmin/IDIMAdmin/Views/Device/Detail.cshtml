@model IDIMAdmin.Models.User.DeviceDetailVm
@{
    ViewBag.Title = "Device";
}

<div class='col-xs-12'>
    <div class="page-title">
        <div class="pull-left">
            <h1 class="title">Device</h1>
        </div>
        <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index","Dashboard")"><i class="fa fa-home"></i>Dashboard</a>
                </li>
                <li>
                    <a href="@Url.Action("List", "Device")">
                        <i class="fa fa-list"></i>
                        Device
                    </a>
                </li>
                <li class="active">
                    <strong>Detail</strong>
                </li>
            </ol>
        </div>

    </div>
</div>
<div class="clearfix"></div>

<div class="col-lg-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title pull-left">Detail</h2>
            <div class="actions panel_actions pull-right">
                <a href="@Url.Action("Create","Device")" class="btn btn-success">
                    <i class="fa fa-plus"></i> Create New
                </a>
                <a href="@Url.Action("Edit","Device", new { id=Model.Device.DeviceId})" class="btn btn-primary">
                    <i class="fa fa-edit"></i> Edit
                </a>

                <a href="@Url.Action("Delete","Device", new { id=Model.Device.DeviceId})" class="btn btn-danger">
                    <i class="fa fa-remove"></i> Delete
                </a>

                <a href="@Url.Action("List","Device")" class="btn btn-default">
                    <i class="fa fa-list"></i> List
                </a>
                <a class="box_toggle fa fa-chevron-down"></a>
            </div>
        </header>

        <div class="content-body">
            <div class="row">
                <div class="col-xs-12">
                    <form class="form-horizontal">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Device.DeviceId, new { @class = "col-md-2 form-label" })
                                    <div class="controls col-md-10">
                                        : @Html.DisplayFor(m => m.Device.DeviceId)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Device.DeviceName, new { @class = "col-md-2 form-label" })
                                    <div class="controls col-md-10">
                                        : @Html.DisplayFor(m => m.Device.DeviceName)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>

                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <header>

                                <h2 class="title pull-left">
                                    Users
                                    <span class="badge badge-danger">@Model.Users.Count</span>
                                </h2>
                            </header>

                            @if (Model.Users.Any())
                            {
                                <table id="UserDataGrid" class="table table-striped table-bordered">
                                    <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Username</th>
                                        <th>Regiment</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    @foreach (var user in Model.Users)
                                    {
                                        <tr>
                                            <td>
                                                @user.UserId
                                            </td>
                                            <td>
                                                @user.Username
                                            </td>
                                            <td>
                                                @user.RegimentNo
                                            </td>
                                            <td>
                                                @user.Email
                                            </td>
                                            <td>
                                                @user.Phone
                                            </td>
                                        </tr>
                                    }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <p>No users found.</p>
                            }
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
</div>


@section scripts {
    <script>
        $(document).ready(function () {
            $('#DataGrid').DataTable({
                "columns": [
                    { className: "id", searchable: false },
                    null,
                    null,
                    null,
                    null
                ]
            });
        });
    </script>
}
