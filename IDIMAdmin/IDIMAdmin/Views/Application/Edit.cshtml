@model IDIMAdmin.Models.User.ApplicationVm
@{
    ViewBag.Title = "Application";
}

<div class='col-xs-12'>
    <div class="page-title">
        <div class="pull-left">
            <h1 class="title">Application</h1>
        </div>

        <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index","Dashboard")"><i class="fa fa-home"></i>Dashboard</a>
                </li>
                <li>
                    <a href="@Url.Action("List", "Application")">
                        <i class="fa fa-list" aria-hidden="true"></i> Application
                    </a>
                </li>
                <li class="active">
                    <strong>Edit</strong>
                </li>
            </ol>
        </div>
    </div>
</div>
<div class="clearfix"></div>

<div class="col-lg-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title pull-left">Edit</h2>
            <div class="actions panel_actions pull-right">
                <a href="@Url.Action("User","Application", new{ id = Model.ApplicationId })" class="btn btn-info">
                    <i class="fa fa-users" aria-hidden="true"></i> Users
                </a>
                <a href="@Url.Action("Menu","Application", new{ id = Model.ApplicationId })" class="btn btn-info">
                    <i class="fa fa-bars" aria-hidden="true"></i> Menu
                </a>
                <a href="@Url.Action("Create","Application")" class="btn btn-success">
                    <i class="fa fa-plus"></i> Create New
                </a>
                <a href="@Url.Action("Detail","Application", new { id=Model.ApplicationId})" class="btn btn-info">
                    <i class="fa fa-info"></i> Detail
                </a>
                <a href="@Url.Action("Delete", "Application", new {id = Model.ApplicationId})" class="btn btn-danger">
                    <i class="fa fa-remove"></i> Delete
                </a>
                <a href="@Url.Action("List", "Application")" class="btn btn-default">
                    <i class="fa fa-list"></i> List
                </a>
                <a class="fa fa-chevron-down"></a>
            </div>
        </header>
        <div class="content-body">
            <div class="row">
                <div class="col-xs-12">
                    @using (Html.BeginForm("Edit", "Application", FormMethod.Post,new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.ApplicationId)

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ApplicationName, new { @class = "col-md-2 form-label" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(m => m.ApplicationName, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.ApplicationName)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ApplicationShortName, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(m => m.ApplicationShortName, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.ApplicationShortName)
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ApplicationCode, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(m => m.ApplicationCode, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.ApplicationCode)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Priority, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(m => m.Priority, new { @class = "form-control spinner" })
                                        @Html.ValidationMessageFor(model => model.Priority)
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Url, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(m => m.Url, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Url)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            
                            @*<div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.Icon, new { @class = "col-md-4 form-label" })
                <div class="col-md-8">
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Icon, new { @class = "form-control" })
                        <div class="col-md-8">
                            <i class="@Model.Icon"></i>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(model => model.Icon)
                </div>
            </div>
        </div>*@
                            @*<div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Color, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        <div class="input-group">
                                            @Html.TextBoxFor(m => m.Color, new { @class = "form-control" })
                                            <div class="input-group-addon">
                                                <i class="fa fa-square" style="#@Model.Color"></i>
                                            </div>
                                        </div>
                                        @Html.ValidationMessageFor(model => model.Color)
                                    </div>
                                </div>
                            </div>*@
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.IsPublished, new { @class = "col-md-2 form-label" })
                                    <div class="col-md-10">
                                        @Html.CheckBoxFor(m => m.IsPublished, new { @class = "form-control iCheck" })
                                        @Html.ValidationMessageFor(model => model.IsPublished)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="pull-right">
                            <input type="submit" class="btn btn-success" value="Update" />
                            <input type="reset" class="btn" value="Clear" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</div>

