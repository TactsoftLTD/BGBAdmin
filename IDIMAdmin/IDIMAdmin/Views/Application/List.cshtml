@model IEnumerable<IDIMAdmin.Models.User.ApplicationVm>
@{
    ViewBag.Title = "Application";
}

<div class='col-xs-12'>
    <div class="page-title">
        <div class="pull-left">
            <h1 class="title">Application</h1>
        </div>
        <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index","Dashboard")"><i class="fa fa-home"></i>Dashboard</a>
                </li>
                <li class="active">
                    <strong>Application</strong>
                </li>
            </ol>
        </div>
    </div>
</div>
<div class="clearfix"></div>
<div id="result"></div>
<div class="col-lg-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title pull-left">List</h2>
            <div class="actions panel_actions pull-right">
                <a href="@Url.Action("Create","Application")" class="btn btn-success">
                    <i class="fa fa-plus"></i> Create New
                </a>
                <a class="box_toggle fa fa-chevron-down"></a>
            </div>
        </header>
        <div class="content-body">
            <div class="row">
                <div class="col-xs-12">
                    <table id="DataGrid" class="table table-striped table-bordered">
                        <thead>
                            <tr>

                                <th style="width: 5%">@Html.DisplayNameFor(m => m.IsPublished)</th>
                                <th style="width: 50%">@Html.DisplayNameFor(m => m.ApplicationName)</th>
                                <th style="width: 45%">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var v in Model)
                            {
                                <tr>
                                    <td>
                                        @if (v.IsPublished)
                                        {
                                            <i class="fa fa-check" style="color: green;"></i> <!-- Icon for true -->
                                        }
                                        else
                                        {
                                            <i class="fa fa-times" style="color: red;"></i> <!-- Icon for false -->
                                        }
                                    </td>
                                    <td>@v.ApplicationName</td>
                                    <td>
                                        <a href="@Url.Action("User","Application", new{ id = v.ApplicationId })">
                                            <span class="label label-info"><i class="fa fa-users"></i> Users</span>
                                        </a>
                                        <a href="@Url.Action("Menu", "Application", new {id = v.ApplicationId})">
                                            <span class="label label-info"><i class="fa fa-list"></i> Menu</span>
                                        </a>
                                        <a href="@Url.Action("Detail", "Application", new {id = v.ApplicationId})">
                                            <span class="label label-info"><i class="fa fa-info"></i> Detail</span>
                                        </a>
                                        <a href="@Url.Action("Edit", "Application", new {id = v.ApplicationId})">
                                            <span class="label label-primary"><i class="fa fa-edit"></i> Edit</span>
                                        </a>
                                        <a href="@Url.Action("Delete", "Application", new {id = v.ApplicationId})">
                                            <span class="label label-danger"><i class="fa fa-remove"></i> Remove</span>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>

