@model IEnumerable<IDIMAdmin.Models.Setup.UnitVm>
@{
    ViewBag.Title = "Unit";
}

<div class='col-xs-12'>
    <div class="page-title">
        <div class="pull-left">
            <h1 class="title">Unit</h1>
        </div>
        <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index","Dashboard")"><i class="fa fa-home"></i>Dashboard</a>
                </li>
                <li class="active">
                    <strong>Unit</strong>
                </li>
            </ol>
        </div>
    </div>
</div>
<div class="clearfix"></div>

<div class="col-lg-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title pull-left">List</h2>
            <div class="actions panel_actions pull-right">
                <a class="box_toggle fa fa-chevron-down"></a>
            </div>
        </header>
        <div class="content-body">
            <div class="row">
                <div class="col-xs-12">
                    <table id="DataGrid" class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(m => m.UnitId)</th>
                            <th>@Html.DisplayNameFor(m => m.UnitName)</th>
                            <th>@Html.DisplayNameFor(m => m.UnitNameB)</th>
                            <th>@Html.DisplayNameFor(m => m.UnitCode)</th>
                            <th>@Html.DisplayNameFor(m => m.UnitFullName)</th>
                            <th>@Html.DisplayNameFor(m => m.RegionName)</th>
                            <th>@Html.DisplayNameFor(m => m.SectorName)</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var v in Model)
                        {
                            <tr>
                                <td>@v.UnitId</td>
                                <td>@v.UnitName</td>
                                <td>@v.UnitNameB</td>
                                <td>@v.UnitFullName</td>
                                <td>@v.UnitCode</td>
                                <td>@v.RegionName</td>
                                <td>@v.SectorName</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $('#DataGrid').DataTable({
                "aaSorting": [],
                "columns": [
                    { className: "id" },
                    null,
                    null,
                    null,
                    null,
                    null,
                    null
                ]
            });
        });
    </script>
}


