@model IDIMAdmin.Models.User.MenuVm
@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<div class='col-xs-12'>
    <div class="page-title">
        <div class="pull-left">
            <h1 class="title">Menu</h1>
        </div>

        <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index","Dashboard")"><i class="fa fa-home"></i>Dashboard</a>
                </li>
                <li>
                    <a href="@Url.Action("List","Menu")">
                        <i class="fa fa-list" aria-hidden="true"></i>  Menu
                    </a>
                </li>
                <li class="active">
                    <strong>Edit</strong>
                </li>
            </ol>
        </div>
    </div>
</div>
<div class="clearfix"></div>


<div class="col-lg-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title pull-left">Delete</h2>
            <div class="actions panel_actions pull-right">
                <a href="@Url.Action("Edit", "Menu", new {id = Model.MenuId})" class="btn btn-primary">
                    <i class="fa fa-edit"></i> Edit
                </a>
                <a href="@Url.Action("List", "Menu")" class="btn btn-default">
                    <i class="fa fa-list"></i> List
                </a>
                <a class="box_toggle fa fa-chevron-down"></a>
            </div>
        </header>
        <div class="content-body">
            <div class="row">
                <div class="col-xs-12">
                    <form class="form-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Title, new { @class = "col-md-2 form-label" })
                            <div class="controls col-md-10">
                                @Html.DisplayFor(m => m.Title)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ControllerName, new { @class = "col-md-2 form-label" })
                            <div class="controls col-md-10">
                                @Html.DisplayFor(m => m.ControllerName)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ApplicationName, new { @class = "col-md-2 form-label" })
                            <div class="controls col-md-10">
                                @Html.DisplayFor(m => m.ApplicationName)
                            </div>
                        </div>
                        
                        <div class="form-group">
                            @Html.LabelFor(m => m.IsPublished, new { @class = "col-md-2 form-label" })
                            <div class="col-md-10">
                                @Html.DisplayFor(m => m.IsPublished, new { @class = "form-control skin-flat-green" })
                            </div>
                        </div>
                    </form>
                    @using (Html.BeginForm("Delete", "Menu", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("MenuId")
                        <a href="@Url.Action("List", "Menu")" class="btn">Cancel</a>
                        <div class="pull-right">
                            <input type="submit" class="btn btn-danger" value="Delete" />
                        </div>
                    }

                </div>
            </div>
        </div>
    </section>
</div>
