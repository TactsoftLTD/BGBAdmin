@model IDIMAdmin.Models.User.MenuGenerateVm
@{
    ViewBag.Title = "Generate";
}

<div class='col-xs-12'>
    <div class="page-title">
        <div class="pull-left">
            <h1 class="title">Menu Generate</h1>
        </div>
        <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
                <li>
                    <a href="#"><i class="fa fa-home"></i>Dashboard</a>
                </li>
                <li>
                    <a href="@Url.Action("List","Menu")">
                        <i class="fa fa-list" aria-hidden="true"></i>
                        Menu
                    </a>
                </li>
                <li class="active">
                    <strong>Generate</strong>
                </li>
            </ol>
        </div>
    </div>
</div>
<div class="clearfix"></div>

<div class="col-lg-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title pull-left">Generate</h2>
            <div class="actions panel_actions pull-right">
                <a href="@Url.Action("List","Menu")" class="btn">
                    <i class="fa fa-list" aria-hidden="true"></i>
                    List
                </a>
                <a class="box_toggle fa fa-chevron-down"></a>
            </div>
        </header>
        <div class="content-body">
            <div class="row">
                <div class="col-xs-12">
                    @using (Html.BeginForm("GenerateDynamic", "Menu", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="pull-right">
                            <input type="submit" class="btn btn-primary" value="Generate" />
                        </div>
                        <br /><br />

                        <div class="row">
                            <div class="col-xs-12">
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered">
                                        <thead>
                                        <tr>
                                            <th width="35px"></th>
                                            <th>Controller Name</th>
                                            <th>Title</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        @for (var i = 0; i < Model.Menus.Count; i++)
                                        {
                                            <tr>
                                                <td>@(i + 1)</td>
                                                <td>
                                                    @Html.HiddenFor(m => m.Menus[i].ControllerName)
                                                    @Html.DisplayName(Model.Menus[i].ControllerName)
                                                </td>
                                                <td>
                                                    @Html.HiddenFor(m => m.Menus[i].Title)
                                                    @Html.DisplayName(Model.Menus[i].Title)
                                                </td>
                                            </tr>
                                        }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</div>