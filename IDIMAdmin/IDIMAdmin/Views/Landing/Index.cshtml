@model IDIMAdmin.Models.LandingVm
@{
    Layout = "";
    ViewBag.Title = "IDIM Admin: Landing";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <Title>IDIM Admin: Landing</Title>
    <link href="~/Content/newlandingbootstrap.css" rel="stylesheet" />
    <link href="~/Content/newlanding.css" rel="stylesheet" />
    <style>
        .page-container {
            padding: 0 !important;
        }
    </style>
</head>

<body>
    <main class="dashboard">
        <div class="hero-section">
            <div class="logo">
                <div class="logo-image">
                    <img class="bgb-sm-1-icon" alt="" src="~/Content/images/bgbsm-1@2x.png" />
                    <span>IDIM</span>
                </div>

                <div class="title">Integrated Database Information Management</div>
            </div>

            <div class="slider">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner" role="listbox">
                        @for (int i = 0; i < Model.ImageSlides.Count(); i++)
                        {
                            if (i == 0)
                            {
                                <div class="carousel-item active">
                                    <img src="@Url.Content(Model.ImageSlides[i].ImagePath)" class="d-block w-100" alt="...">
                                </div>
                            }
                            else
                            {
                                <div class="carousel-item">
                                    <img src="@Url.Content(Model.ImageSlides[i].ImagePath)" class="d-block w-100" alt="...">
                                </div>
                            }
                        }
                    </div>
                    <button class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <img class="button-icon1" alt="" src="~/Content/images/button1.svg" />
                        <span class="sr-only">Previous</span>
                    </button>
                    <button class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <img class="button-icon" alt="" src="~/Content/images/button.svg" />
                        <span class="sr-only">Next</span>
                    </button>
                </div>
            </div>
        </div>

        <div class="container menu-container">
            @foreach (var application in Model.Applications)
            {
                <div class="menu-item">
                    <a class="menu-link" href="@Url.Content(application.Url)" target="_blank">
                        <div class="card menu-content">
                            <div class="card-body">
                                <img src="@Url.Content(application.IconImagePath)" style="object-fit:contain!important;" alt="">
                            </div>
                        </div>
                        <p class="menu-title">@Url.Content(application.ApplicationShortName)</p>
                    </a>
                </div>
            }
        </div>

    </main>

    <footer class="footer">
        <div class="">
            <div class="row">
                <div class="col-md-4 col-12 footer-left">
                    
                </div>
                <div class="col-md-4 col-12 footer-center">
                    Copyright © Border Guard Bangladesh
                    <img class="footer-logo-icon" alt="" src="~/Content/images/footerlogo@2x.png" />
                </div>
                <div class="col-md-4 col-12 footer-right">
                    <a href="@Url.Action("Index","ContactUs")" target="_blank">Contact Us</a>
                    <img class="footer-logo-icon" alt="" src="~/Content/images/qr.png" />
                </div>
            </div>
        </div>
    </footer>

    <script src="~/Scripts/newlandingscript1.js"></script>
    <script src="~/Scripts/newlandingscript2.js"></script>

    <script>
        window.addEventListener('DOMContentLoaded', function () {
            var footer = document.querySelector('.footer');
            var contentHeight = document.querySelector('.dashboard').offsetHeight;
            var windowHeight = window.innerHeight;

            if (contentHeight <= windowHeight) {
                footer.style.position = 'fixed';
                footer.style.bottom = '0';
            } else {
                footer.style.position = 'relative';
            }
        });
    </script>
</body>
</html>
