@model IDIMAdmin.Models.User.UserVm
@{
    ViewBag.Title = "User";
}

<div class='col-xs-12'>
    <div class="page-title">
        <div class="pull-left">
            <h1 class="title">User</h1>
        </div>
        <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index","Dashboard")"><i class="fa fa-home"></i>Dashboard</a>
                </li>
                <li>
                    <a href="@Url.Action("List","User")">
                        <i class="fa fa-list" aria-hidden="true"></i>
                        User
                    </a>
                </li>
                <li class="active">
                    <strong>Edit</strong>
                </li>
            </ol>
        </div>
    </div>
</div>
<div class="clearfix"></div>

<div class="col-lg-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title pull-left">Edit</h2>
            <div class="actions panel_actions pull-right">
                <a href="@Url.Action("Assign","User", new{ id = Model.UserId })" class="btn btn-info">
                    <i class="fa fa-building-o" aria-hidden="true"></i> Assign Roles
                </a>
                @* <a href="@Url.Action("Assign","UserMenu", new{ id = Model.UserId })" class="btn btn-info">
                        <i class="fa fa-bars" aria-hidden="true"></i> Menu
                    </a>
                    <a href="@Url.Action("Assign","UserDevice")" class="btn btn-info">
                        <i class="fa fa-desktop"></i> Device
                    </a>*@
                <a href="@Url.Action("Create","User")" class="btn btn-success">
                    <i class="fa fa-plus"></i> Create New
                </a>
                <a href="@Url.Action("Detail","User", new { id=Model.UserId})" class="btn btn-info">
                    <i class="fa fa-info"></i> Detail
                </a>
                <a href="@Url.Action("Delete", "User", new {id = Model.UserId})" class="btn btn-danger">
                    <i class="fa fa-remove"></i> Delete
                </a>
                <a href="@Url.Action("List","User")" class="btn">
                    <i class="fa fa-list" aria-hidden="true"></i> List
                </a>
                <a class="box_toggle fa fa-chevron-down"></a>
            </div>
        </header>
        <div class="content-body">
            <div class="row">
                <div class="col-xs-12">

                    @using (Html.BeginForm("Edit", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.UserId)
                        @Html.HiddenFor(model => model.RegimentNo)

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Username, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Username)
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ArmyId, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(m => m.ArmyId)
                                        @Html.ValidationMessageFor(model => model.ArmyId)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.PersonnelCode, new { @class = "col-md-2 form-label" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(m => m.PersonnelCode, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.PersonnelCode)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Phone, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <span><i class="fa fa-phone"></i></span>
                                            </div>
                                            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.Phone)
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Email, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <span><i class="fa fa-at"></i></span>
                                            </div>
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.Email)
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.UserType, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        <div class="input-group">
                                            <div class="input-group-addon"></div>
                                            @Html.DropDownListFor(m => m.UserType, (IEnumerable<SelectListItem>)ViewBag.UserTypeList, "-- Select User Type --", new { @class = "form-control" })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.Email)
                                    </div>
                                </div>
                            </div>
                            <!-- Selected Units -->
                            <div class="row" id="SelectedUniteIdsDiv">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.Label("Select Multiple Unit", new { @class = "col-md-4 form-label" })
                                        <div class="col-md-8">
                                            @Html.ListBox("SelectedUnitIds", (IEnumerable<SelectListItem>)ViewBag.UniteList, new { @class = "js-multiple ", id = "SelectedUnitIds", multiple = "multiple" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.IsActive, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-control iCheck" })
                                        @Html.ValidationMessageFor(model => model.IsActive)
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6" id="IsAllDiv">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.IsAll, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        @Html.CheckBoxFor(m => m.IsAll, new { @class = "form-control iCheck", id = "IsAll" })
                                        @Html.ValidationMessageFor(model => model.IsAll)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="pull-right">
                            <input type="submit" class="btn btn-success" value="Save" />
                            <input type="reset" class="btn" value="Clear" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</div>


@section Scripts {
    <!-- jQuery CDN -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-+N4dZ2s6yPzFT9eQd2pQ0R/3E1tjG6kC4Xc9G9uP6lw=" crossorigin="anonymous"></script>

    <!-- Select2 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        selection2("#ArmyId", {id:'@Model.ArmyId', text:'@Model.RegimentNo'})
        $(document).ready(function () {
            // Initialize Select2
            $('#SelectedUnitIds').select2({
                placeholder: "-- Select Unit List --",
                allowClear: true,
                width: '100%'
            });

            function toggleSelectedUniteDiv() {
                if ($('#IsAll').is(':checked')) {
                    $('#SelectedUniteIdsDiv').hide(); // hide the entire div
                    $('#SelectedUniteIds').val(null).trigger('change'); // clear dropdown
                } else {
                    $('#SelectedUniteIdsDiv').show(); // show the div
                }
            }


            function toggleIsAllDiv() {
                var selectedCount = $('#SelectedUnitIds').val() ? $('#SelectedUnitIds').val().length : 0;
                if (selectedCount > 0) {
                    $('#IsAllDiv').hide();
                } else {
                    $('#IsAllDiv').show();
                }
            }

            function toggleAllOnLoad() {
                toggleSelectedUniteDiv();
                toggleIsAllDiv();
            }

            // Initial load
            toggleAllOnLoad();
            // Event handlers
            $('#IsAll').on('ifChanged', function (event) {
                toggleSelectedUniteDiv();
            });

            $('#SelectedUnitIds').on('change', function () {
                toggleIsAllDiv();
            });
        });
    </script>
}




