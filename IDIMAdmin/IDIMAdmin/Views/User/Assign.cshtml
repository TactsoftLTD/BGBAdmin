@model IDIMAdmin.Models.User.UserRolePermissionVm
@{
    ViewBag.Title = "User Role Assign";
}

<div class='col-xs-12'>
    <div class="page-title">
        <div class="pull-left">
            <h1 class="title">User Role</h1>
        </div>

        <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index","Dashboard")"><i class="fa fa-home"></i>Dashboard</a>
                </li>
                <li>
                    <a href="@Url.Action("List","User")">
                        <i class="fa fa-list" aria-hidden="true"></i>
                        User
                    </a>
                </li>
                <li class="active">
                    <strong>Role Assign</strong>
                </li>
            </ol>
        </div>
    </div>
</div>
<div class="clearfix"></div>

<div class="col-lg-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title pull-left">Assign</h2>
            <div class="actions panel_actions pull-right">
                <a href="@Url.Action("Create","User")" class="btn btn-success">
                    <i class="fa fa-plus"></i> Create New
                </a>
                <a href="@Url.Action("Detail","User", new { id=Model.UserId})" class="btn btn-info">
                    <i class="fa fa-info"></i> Detail
                </a>
                <a href="@Url.Action("Edit", "User", new {id = Model.UserId})" class="btn btn-primary">
                    <i class="fa fa-edit"></i> Edit
                </a>
                <a href="@Url.Action("Delete","User", new{ id = Model.UserId })" class="btn btn-danger">
                    <i class="fa fa-remove" aria-hidden="true"></i> Delete
                </a>
                <a href="@Url.Action("List", "User")" class="btn btn-default">
                    <i class="fa fa-list"></i> List
                </a>
                <a class="box_toggle fa fa-chevron-down"></a>
            </div>
        </header>
        <div class="content-body">
            <div class="row">
                <div class="col-xs-12">

                    @using (Html.BeginForm("Assign", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.UserId)

                        <div class="form-group">
                            @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 form-label" })
                            <div class="col-md-10">
                                @Html.DisplayFor(m => m.UserName, new { @disabled = "disabled" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Application", new { @class = "col-md-2 form-label" })
                            <div class="col-md-10">
                                @foreach (var application in Model.Roles.Where(x => x.Roles.Any(a => a.IsAssigned)))
                                {
                                    <a href="@Url.Action("Detail", "Application", new { id = application.ApplicationId })">
                                        <span class="badge badge-danger">
                                            @application.ApplicationName
                                        </span>
                                    </a>
                                }
                            </div>
                        </div>


                        <header class="panel_header">
                            <h2 class="title pull-left">Roles</h2>
                        </header>
                        <div class="panel-group default collapsed" id="accordion-4" role="tablist" aria-multiselectable="true">
                            @if (Model.Roles.Any())
                            {
                                for (var i = 0; i < Model.Roles.Count(); i++)
                                {
                                    <div class="panel panel-default role-list" id="role-list-@i">
                                        <div class="panel-heading" role="tab" id="headingOne1">
                                            <h4 class="panel-title">
                                                <a data-toggle="collapse" data-parent="#accordion" href="#collapse-@i" aria-expanded="true" aria-controls="collapseOne">
                                                    <input type="checkbox" class="iCheck select-all">
                                                    @Model.Roles[i].ApplicationName
                                                    @Html.HiddenFor(m => Model.Roles[i].ApplicationName)
                                                </a>
                                            </h4>
                                        </div>
                                        <div id="collapse-@i" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne1">
                                            <div class="panel-body">
                                                <table class="table table-striped table-bordered">
                                                    <tbody>
                                                        @for (var j = 0; j < Model.Roles[i].Roles.Count(); j++)
                                                        {
                                                            @Html.HiddenFor(m => Model.Roles[i].Roles[j].RoleId)

                                                            <tr>
                                                                <td style="width: 35px;">@Html.CheckBoxFor(m => Model.Roles[i].Roles[j].IsAssigned, new { @class = "form-control iCheck item" })</td>
                                                                <td>
                                                                    @Html.DisplayFor(m => Model.Roles[i].Roles[j].Name)
                                                                    @Html.HiddenFor(m => Model.Roles[i].Roles[j].Name)
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>

                                    <script>
                                        $(document).ready(function () {
                                            var checkAll = $('#role-list-@i .select-all');
                                            var checkboxes = $('#role-list-@i').find('.item');

                                            checkAll.on('ifChecked ifUnchecked', function(event) {
                                                if (event.type == 'ifChecked') {
                                                    checkboxes.iCheck('check');
                                                } else {
                                                    checkboxes.iCheck('uncheck');
                                                }
                                            });
                                        });

                                    </script>
                                }
                            }
                            else
                            {
                                <p>No Roles assigned.</p>
                            }
                        </div>

                        <div class="pull-right">
                            <input type="submit" class="btn btn-success" value="Save" />
                            <input type="reset" class="btn" value="Clear" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</div>