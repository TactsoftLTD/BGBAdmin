            <div class="row">
                <div class="col-xs-12">
                    <table id="DataGrid" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Priority</th>
                                <th>Name</th>
                                <th>Photo</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var v in Model)
                            {
                                <tr>
                                    <td>@v.Priority</td>
                                    <td>@v.Title</td>
                                    <td>
                                        @if (@v.ImagePath != null)
                                        {
                                            <img src="@Url.Content(@v.ImagePath)" class="img-responsive" alt="@v.AlternateText" style="height: 100px; width: 100px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <img src="path_to_default_image" class="img-responsive" alt="@v.AlternateText">
                                        }
                                    </td>
                                    <td>
